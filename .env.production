# Django App Production Env

SECRET_KEY=<GENERATE_A_NEW_SECRET_KEY>
DEBUG=False

# Allowed hosts (NO SPACES)
ALLOWED_HOSTS=hrm.wealthzonegroupai.com,api.wealthzonegroupai.com

# Database (PostgreSQL recommended)

DATABASE_URL=postgres://<USER>:<PASSWORD>@<HOST>:5432/<DBNAME>

# CORS

CORS_ALLOWED_ORIGINS=https://wealthzonegroupai.com,https://app.wealthzonegroupai.com

# Logging

LOG_LEVEL=INFO

# Security Headers

SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Email (real SMTP)

EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-password-or-app-password
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Media storage

USE_EXTERNAL_MEDIA=False
